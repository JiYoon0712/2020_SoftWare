<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tabSite"
        android:orientation="vertical"
        android:gravity="center|center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="[ 인터넷 일반 서점 ]"/>
        <Button
            android:id="@+id/btnKyobo"
            android:background="@drawable/kyobo"
            android:layout_margin="20dp"
            android:layout_width="250dp"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/btnYes24"
            android:background="@drawable/yes24"
            android:layout_margin="20dp"
            android:layout_width="250dp"
            android:layout_height="80dp" />
        <Button
            android:id="@+id/btnInterpark"
            android:background="@drawable/interpark"
            android:layout_margin="20dp"
            android:layout_width="250dp"
            android:layout_height="80dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="[ 인터넷 중고 서점 ]"/>
        <Button
            android:id="@+id/btnAladin"
            android:background="@drawable/aladin"
            android:layout_margin="20dp"
            android:layout_width="250dp"
            android:layout_height="80dp" />
    </LinearLayout>
</LinearLayout>

